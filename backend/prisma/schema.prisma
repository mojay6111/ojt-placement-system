generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}
enum UserRole {
  ADMIN
  STUDENT
  INSTRUCTOR
  COORDINATOR
}



model Department {
  id        Int       @id @default(autoincrement())
  name      String
  code      String    @unique
  students  Student[] // Relation: Department has many students
  instructors Instructor[] // Relation: Department has many instructors
}

