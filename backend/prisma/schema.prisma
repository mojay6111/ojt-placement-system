model Student {
  id           Int      @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String   @unique
  departmentId Int

  userId Int?  @unique
  user   User? @relation(fields: [userId], references: [id], map: "fk_student_user")

  department Department @relation(fields: [departmentId], references: [id])
}


