model OJTVisit {
  id           Int       @id @default(autoincrement())
  placementId  Int
  instructorId Int
  visitDate    DateTime
  notes        String?
  placement    OJTPlacement @relation(fields: [placementId], references: [id])
  instructor   Instructor   @relation(fields: [instructorId], references: [id])
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  role         UserRole
  createdAt    DateTime @default(now())

  student               Student?
  instructor            Instructor?
  industrialCoordinator IndustrialCoordinator?
}
